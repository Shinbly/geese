<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <RelativeLayout
            android:id="@+id/seekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <SeekBar
                android:id="@+id/seekBarEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="20sp"/>


                <Button
                    android:id="@+id/validate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/seekBarEdit"
                    android:elevation="0dp"
                    android:paddingLeft="15sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Validate" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorWhite"
                    android:layout_below="@+id/seekBarEdit"
                    android:elevation="0dp"
                    android:paddingRight="15sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Cancel" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_colorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/colo_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp">

            <ImageButton
                android:id="@+id/colo_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colorization_none"/>

            <ImageButton
                android:id="@+id/colo_jaune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_jaune"/>

            <ImageButton
                android:id="@+id/colo_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_orange"/>

            <ImageButton
                android:id="@+id/colo_rouge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_rouge"/>

            <ImageButton
                android:id="@+id/colo_rose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_rose"/>

            <ImageButton
                android:id="@+id/colo_violet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_violet"/>

            <ImageButton
                android:id="@+id/colo_bleu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_bleu"/>

            <ImageButton
                android:id="@+id/colo_turquoise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_right_button"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_turquoise"/>

            <ImageButton
                android:id="@+id/colo_vert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_colo_vert"/>

            </LinearLayout>

            <Button
                android:id="@+id/validate_colo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/colo_buttons"
                android:elevation="0dp"
                android:paddingLeft="15sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="Validate" />

            <Button
                android:id="@+id/cancel_colo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/colorWhite"
                android:layout_below="@+id/colo_buttons"
                android:elevation="0dp"
                android:paddingRight="15sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="Cancel" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/filtersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/brightness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:layout_marginLeft="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_brightness" />

                    <ImageButton
                        android:id="@+id/contrast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_contrast" />

                    <ImageButton
                        android:id="@+id/blurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_blur" />

                    <ImageButton
                        android:id="@+id/averager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_averager" />

                    <ImageButton
                        android:id="@+id/saturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_saturation"/>

                    <ImageButton
                        android:id="@+id/hue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_hue"/>

                    <ImageButton
                        android:id="@+id/colorization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right_button"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_colorization"/>


                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>